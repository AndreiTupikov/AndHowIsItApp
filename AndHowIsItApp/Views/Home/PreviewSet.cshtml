@model IEnumerable<AndHowIsItApp.Models.PreviewModel>

<div class="album py-3 bg-light">
    <div class="container">
        <h2>@ViewBag.ParagraphName</h2>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3" id="results-set">
            @foreach (var p in Model)
            {
                <div class="col" name="preview-card">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <div class="card-title d-flex justify-content-between">
                                <h4>@p.Title</h4>
                                <div class="d-flex">
                                    <i class="bi bi-heart-fill ms-2" style="font-size: 1.1rem; color: red;"></i>
                                    <h4 id="likes">@p.Likes</h4>
                                </div>
                            </div>
                            <div class="d-flex">
                                <div class="card-text">@AndHowIsItApp.Resources.Language.Author @p.Author.UserName</div>
                                <i class="bi bi-heart-fill ms-2" style="font-size: 1rem; color: red;"></i>
                                <div class="card-text">@p.Author.Likes</div>
                            </div>
                        </div>
                        <div class="w-100 ratio ratio-1x1" name="picture" id="picture-@p.ReviewId" data-filepath="@p.PictureLink" data-postfix="_preview"></div>
                        <div class="card-body">
                            <div class="card-title">
                                <div class="d-flex justify-content-between">
                                    <h4>@p.Subject.Name</h4>
                                    <div class="d-flex">
                                        <i class="bi bi-star-fill" style="font-size: 1.2rem; color: #FFC107;"></i>
                                        <h4 id="subjectRating">@p.Subject.Rating</h4>
                                    </div>
                                </div>
                                <p class="card-text">@AndHowIsItApp.Resources.Language.Category @p.Subject.Category</p>
                            </div>
                            <div class="d-flex">
                                <h6 class="card-text">@AndHowIsItApp.Resources.Language.AuthorsRating</h6>
                                <div class="d-flex ms-2">
                                    <h6 class="card-text" id="reviewerRating">@p.Rating</h6>
                                    <h6 class="card-text">/10</h6>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    @Html.ActionLink(AndHowIsItApp.Resources.Language.View, "ReviewPage", new { reviewId = p.ReviewId }, new { @class = "btn btn-sm btn-outline-dark" })
                                </div>
                                <small class="text-muted" id="date">@p.Date</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>