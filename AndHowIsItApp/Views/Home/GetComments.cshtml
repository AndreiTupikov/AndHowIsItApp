@model IEnumerable<AndHowIsItApp.Models.CommentViewModel>

@foreach (var c in Model)
{
    <div>
        <div class="d-flex">
            <h4>@c.Author.UserName</h4>
            <i class="bi bi-heart-fill ms-2" style="font-size: 1rem; color: red;"></i>
            <h4>@c.Author.Likes</h4>
        </div>
        <div>@c.Text</div>
        <div>@c.Date</div>
        <br />
    </div>
}